<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorNam"
    >

    <ImageButton
        android:id="@+id/newenw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:src="@drawable/newnew" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/newitem"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />
        <Button
            android:text="ADD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            android:onClick="mOnClick"
            />

        <Button
            android:text="DELETE"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete"
            android:onClick="mOnClick"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp">
        <ImageButton
            android:id="@+id/add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"

            android:src="@drawable/add"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/alldelete11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="true"

            android:src="@drawable/alldelete1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"

        >
        <ImageButton
            android:id="@+id/savelist11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@android:color/transparent"
            android:clickable="true"

            android:src="@drawable/savelist1"
            android:layout_marginRight="25dp"/>

        <ImageButton
            android:id="@+id/setting11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="setting11"
            android:src="@drawable/setting1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"


        >
        <ImageButton
            android:id="@+id/loadlist1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@android:color/transparent"
            android:clickable="true"

            android:src="@drawable/loadlist"
            android:layout_marginRight="25dp"/>

        <ImageButton
            android:id="@+id/run1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@android:color/transparent"
            android:clickable="true"

            android:src="@drawable/run" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewcopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:text="copyright by DOT"
        android:textColor="#03A9F4"
        android:textSize="16dp"
        android:layout_weight="1"/>
</LinearLayout>